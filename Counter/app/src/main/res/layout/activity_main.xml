<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="288dp"
        android:layout_height="218dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="150sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.212" />

    <Button
        android:id="@+id/Increment_btn"
        android:layout_width="141dp"
        android:layout_height="62dp"
        android:layout_marginTop="128dp"
        android:shadowColor="#8BC34A"
        android:text="COUNT++"
        android:textSize="20sp"
        app:backgroundTint="#8BC34A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/reset_btn"
        android:layout_width="193dp"
        android:layout_height="58dp"
        android:layout_marginTop="27dp"
        android:shadowColor="#009688"
        android:text="RESET"
        android:textSize="20sp"
        app:backgroundTint="#009688"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Increment_btn"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/decrement_btn"
        android:layout_width="141dp"
        android:layout_height="62dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="128dp"
        android:text="Count--"
        android:textSize="20sp"
        app:backgroundTint="#F46C36"
        app:layout_constraintStart_toEndOf="@+id/Increment_btn"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>